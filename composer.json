{
    "name": "haeckel/generics",
    "description": "Support for generic classes",
    "type": "library",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Dominik HÃ¤ckel",
            "homepage": "https://github.com/dhaeckel"
        }
    ],
    "require": {
        "php": "^8.1",
        "haeckel/exception": "^1.0"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^12.3",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Haeckel\\Generics\\": "src/",
            "Haeckel\\Generics\\Test\\": "test/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "test": [
            "@putenv XDEBUG_MODE=coverage",
            "vendor/bin/phpunit"
        ],
        "test-local": [
            "@test --coverage-html .phpunit/html-coverage"
        ],
         "testSilent": [
            "@putenv XDEBUG_MODE=coverage",
            "vendor/bin/phpunit --no-output 2> /dev/null"
        ],
        "phpstan": [
            "vendor/bin/phpstan"
        ],
        "ps": [
            "@phpstan"
        ],
        "cs": [
            "vendor/bin/phpcs src/"
        ],
        "cbf": [
            "vendor/bin/phpcbf src/"
        ],
        "ci": [
            "@cbf",
            "@cs",
            "@phpstan -q",
            "@testSilent"
        ],
        "local-ci": [
            "@cbf",
            "@cs",
            "@phpstan --no-progress",
            "@test --coverage-html .phpunit/html-coverage"
        ]
    },
    "archive": {
        "exclude": [
            "/test/",
            "phpcs.xml.dist",
            "phpstan.dist.neon",
            "phpunit.xml",
            ".gitignore",
            "/.github/",
            "/.githooks/"
        ]
    }
}
